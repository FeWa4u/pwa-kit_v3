{
    "app": {
        "url": {
            "locale": "path",
            "site": "path",
            "showDefaults": true
        },
        "siteAliases": {
            "site-1": "uk",
            "site-2": "us"
        },
        "defaultSite": "site-1",
        "sites": [
            {
                "id": "site-1",
                "l10n": {
                    "defaultLocale": "en-GB",
                    "supportedLocales": [
                        {
                            "id": "en-GB",
                            "alias": "en-uk",
                            "preferredCurrency": "GBP"
                        },
                        {
                            "id": "fr-FR",
                            "alias": "fr",
                            "preferredCurrency": "EUR"
                        },
                        {
                            "id": "it-IT",
                            "alias": "it",
                            "preferredCurrency": "EUR"
                        }
                    ]
                }
            },
            {
                "id": "site-2",
                "l10n": {
                    "defaultLocale": "en-US",
                    "supportedLocales": [
                        {
                            "id": "en-US",
                            "preferredCurrency": "USD"
                        }
                    ]
                }
            }
        ]
    }
}
